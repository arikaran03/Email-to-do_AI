{
    "manifest_version": 3,
    "name": "Live QGen AI",
    "version": "1.0.0",
    "description": "Real-time transcription for Zoom & Google Meet",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://*.zoom.us/*","https://meet.google.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://*.zoom.us/*","https://meet.google.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  